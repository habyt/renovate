{
  "extends": ["config:base"],
  "labels": ["patch"],
  "schedule": ["every weekend"],
  "dependencyDashboard": true,
  "stabilityDays": 3,
  "prCreation": "not-pending",
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "updateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    },
    {
      "groupName": "definitelyTyped",
      "packagePatterns": ["^@types/"]
    },
    {
      "groupName": "jest",
      "packageNames": ["jest", "ts-jest", "@types/jest"]
    }
  ]
}
